{
  "title": "user-signup",
  "description": "describes properties required to sign up a user",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "description": "user firstname"
    },
    "lastName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "description": "user lastname"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "user email"
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 30,
      "description": "user pass"
    }
  },
  "required": ["email", "password"]
}